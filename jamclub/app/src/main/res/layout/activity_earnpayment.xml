<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:paddingTop="20dp"
        >

        <com.magnaideas.jamclub.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#34495e"
            android:singleLine="true"
            android:text="Jam Bot Rules"/>

        <com.magnaideas.jamclub.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#34495e"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:text="1) You are now logged in!"/>

        <com.magnaideas.jamclub.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#34495e"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="2) You'll get a notification, if we need you"/>

        <com.magnaideas.jamclub.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#34495e"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="3) We'll pay you back through paypal."/>

        <com.magnaideas.jamclub.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#34495e"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:text="ps: you can change your account at any time"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:gravity="center_horizontal">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#34495e"
            android:textSize="20sp"
            android:id="@+id/editText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textColor="#ffffff"
            android:background="@drawable/material_button"
            android:id="@+id/button2"
            android:layout_marginLeft="10dp"
            android:onClick="submitEmail" />


    </LinearLayout>

</LinearLayout>
